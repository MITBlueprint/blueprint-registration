<h1>Blueprint Registration</h1>

<%= link_to "Hackers sign up here", hacker_sign_up_path %>
<%= link_to "Mentors sign up here", mentor_sign_up_path %>

<%= form_for(resource, as: resource_name, url: session_path(resource)) do |f| %>
  <%= f.text_field :email %>
  <%= f.password_field :password %>
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>
  <%= f.submit 'Sign in' %>
  <%= link_to "Forgot your password?", new_password_path(resource) %>
<% end %>
