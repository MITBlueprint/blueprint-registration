<h1>Blueprint Registration</h1>

<%= link_to "Hackers sign up here", hacker_sign_up_path %><br />
<%= link_to "Mentors sign up here", mentor_sign_up_path %><br />

<%= form_for(resource, as: resource_name, url: session_path(resource)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %><br />
  <%= f.submit 'Sign in' %><br />
  <%= link_to "Forgot your password?", new_password_path(resource) %>
<% end %>
