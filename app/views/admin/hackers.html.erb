<h1 class="ui center aligned icon header">
  <i class="circular users icon"></i>
  Hackers
</h1>

<div class="ui center aligned header">
  <%= link_to "View Mentors", admin_mentors_path, class: "ui button" %>
  <%= link_to "Log Out", admin_logout_path, method: :delete, class: "ui negative button" %>
</div>

<div class="ui centered aligned header">
  Total Records: <%= @hackers.length %>
</div>

<table class="ui table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Confirmed?</th>
      <th>Attending Day 1?</th>
      <th>Attending Day 2?</th>
      <th>Forms</th>
    </tr>
  </thead>
<% for hacker in @hackers %>
  <%= render partial: 'hacker_small', locals: { hacker: hacker } %>
<% end %>
</table>
