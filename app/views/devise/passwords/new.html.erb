<div class="title">
    Forgot Password?
</div>

<div class="ui form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %></div>
    </div>

    <div class="field">
      <%= f.submit "Send me reset password instructions", class: 'ui fluid yellow button' %>
    </div>
  <% end %>
</div>
